<Application x:Class="formular_zamestnanec_wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:formular_zamestnanec_wpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="TextBlockWarning" TargetType="TextBlock">
                <Setter Property="Background" Value="#e70303"/>
                <Setter Property="Foreground" Value="LightYellow"/>

            </Style>

            <Style x:Key="TextBlockNormal" TargetType="TextBlock">
                <Setter Property="Background" Value="#0900ff"/>
                <Setter Property="Foreground" Value="LightYellow"/>

            </Style>

            <Style x:Key="ButtonSend" TargetType="Button">
                <Setter Property="Background" Value="#00ff22"/>
                <Setter Property="Foreground" Value="LightYellow"/>

            </Style>

            <Style x:Key="ButtonClear" TargetType="Button">
                <Setter Property="Background" Value="#efef00"/>
                <Setter Property="Foreground" Value="LightYellow"/>

            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
